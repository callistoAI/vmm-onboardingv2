{
  "build": {
    "command": "npm ci && npm run build",
    "publish": ".next",
    "environment": {
      "NODE_VERSION": "20",
      "NPM_FLAGS": "--production=false",
      "NEXT_TELEMETRY_DISABLED": "1",
      "CI": "false"
    }
  },
  "functions": {
    "directory": ".netlify/functions"
  },
  "redirects": [
    {
      "from": "/*",
      "to": "/index.html",
      "status": 200
    }
  ]
}
